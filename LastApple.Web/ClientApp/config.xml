<?xml version='1.0' encoding='utf-8'?>
<widget id="Lastream" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Lastream</name>
    <description>
        A music player combining power of last.fm and Apple Music
    </description>
    <author email="devgorbenko@gmail.com" href="https://lastream.net">
        Vitaliy Gorbenko
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <splash src="Default@2x~universal~anyany.png" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <hook type="after_prepare" src="after_prepare_ios_hook.sh"/>
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="DisallowOverscroll" value="true"/>
</widget>
